!!!
%html
  %head
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }
    %title= content_for?(:title) ? yield(:title) : 'Smartsearch'
    %meta{ name: 'description', content: "#{content_for?(:description) ? yield(:description) : 'Smartsearch'}" }
    = stylesheet_link_tag 'visitors', media: 'all'
    = javascript_include_tag 'visitors'
    = csrf_meta_tags
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link href="http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">
  %body
    %header
      = render 'layouts/navigation' unless current_page?(root_path)
    = render 'layouts/messages'
    = yield
