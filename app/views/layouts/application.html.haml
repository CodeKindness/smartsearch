!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Smartsearch'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Smartsearch'}"}
    = stylesheet_link_tag 'application', media: 'all'
    = stylesheet_link_tag 'print', media: 'print'
    = stylesheet_link_tag(params[:controller], :media => 'all') if Smartsearch::Application.assets.find_asset("#{controller.controller_name}.css")
    = csrf_meta_tags
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link href="http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">
    <link href='http://fonts.googleapis.com/css?family=Open+Sans&amp;subset=latin,latin-ext' rel='stylesheet' type='text/css'>
    = javascript_include_tag 'application/moment-with-langs.min'
  %body.side_menu_active.side_menu_expanded
    #page_wrapper
      %header#main_header
        .container-fluid
          .brand_section
            = link_to '/' do
              = image_tag 'application-logo.png', height: 26, width: 63, alt: 'Site logo'
          %ul.header_notifications.clearfix
            %li.dropdown
              %span.label.label-danger= @unread_counts[:inbox]
              <a data-toggle="dropdown" href="#" class="dropdown-toggle"><i class="fa fa-envelope"></i></a>
              .dropdown-menu
                %ul
                  %li
                    = gravatar_image_tag('contact@smartsearch.email', :alt => 'Smartsearch', :gravatar => { :size => 38 })
                    <p><a href="#">Lorem ipsum dolor sit amet&hellip;</a></p>
                    %small.text-muted 14.07.2014
                  %li
                    <a href="#" class="btn btn-xs btn-primary btn-block">All messages</a>
            %li.dropdown#tasks_dropdown
              %span.label.label-danger= nil
              <a data-toggle="dropdown" href="#" class="dropdown-toggle"><i class="fa fa-tasks"></i></a>
              .dropdown-menu
                %ul
                  %li
                    .clearfix
                      .label.label-warning.pull-right Medium
                      %small.text-muted YUK-21 (24.07.2014)
                    %p Lorem ipsum dolor sit amet&hellip;
                  %li <a href="#" class="btn btn-xs btn-primary btn-block">All tasks</a>
            %li.dropdown
              %span.label.label-primary= nil
              <a data-toggle="dropdown" href="#" class="dropdown-toggle"><i class="fa fa-bell"></i></a>
              .dropdown-menu
                %ul
                  %li
                    %p Lorem ipsum dolor sit amet&hellip;
                    %small.text-muted 20 minutes ago
                  %li <a href="#" class="btn btn-xs btn-primary btn-block">All alerts</a>
          .header_user_actions.dropdown
            .dropdown-toggle.user_dropdown{ 'data-toggle': 'dropdown' }
              .user_avatar
                = gravatar_image_tag('contact@smartsearch.email', :alt => 'Smartsearch', :gravatar => { :size => 38 })
              %span.caret
            %ul.dropdown-menu.dropdown-menu-right
              %li #{@current_user.nickname}@smartsearch.email
              %li <a href="pages-user_profile.html">User Profile</a></li>
              %li <a href="login_page.html">Log Out</a></li>
          .search_section.hidden-sm.hidden-xs
            <input type="text" class="form-control input-sm">
            <button class="btn btn-link btn-sm" type="button"><span class="icon_search"></span></button>

      %nav#breadcrumbs
        %ul
          %li
            <a href="dashboard.html">Home</a>

      #main_wrapper
        .container-fluid
          = yield

      %nav#main_menu
        .menu_wrapper
          %ul
            %li.first_level
              <a href="#"><span class="first_level_icon"><i class="fa fa-home"></i></span><span class="menu-title">Dashboard</span></a>
            %li.first_level
              <a href="/messages"><span class="first_level_icon"><i class="fa fa-envelope-o"></i></span><span class="menu-title">Messages</span></a>
            %li.first_level
              <a href="/contacts"><span class="first_level_icon"><i class="fa fa-building"></i></span><span class="menu-title">Companies</span></a>
            %li.first_level
              <a href="/messages"><span class="first_level_icon"><i class="fa fa-users"></i></span><span class="menu-title">Contacts</span></a>
            -#%li.first_level
            -#  <a href="javascript:void(0)"><span class="first_level_icon"><i class="fa fa-tasks"></i></span><span class="menu-title">Messages</span></a>
            -#  %ul
            -#    <li class="submenu-title">Forms</li>
            -#    <li><a href="forms-regular_elements.html">Regular Elements</a></li>
        .menu_toggle
          <span class="icon_menu_toggle"><i class="arrow_carrot-2left toggle_left"></i><i class="arrow_carrot-2right toggle_right" style="display:none"></i></span>

    = javascript_include_tag 'application'
    = javascript_include_tag(params[:controller]) if Smartsearch::Application.assets.find_asset("#{controller.controller_name}.js")
